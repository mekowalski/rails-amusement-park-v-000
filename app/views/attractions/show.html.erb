<p><strong>Name:</strong> <%= @attraction.name %></p><br>
<p><strong>Total Number of Users:</strong> <%= @attraction.users.count %></p><br>
<p><strong>Ticket Requirement:</strong> <%= @attraction.tickets %></p><br>
<p><strong>Height Requirement:</strong> <%= @attraction.min_height %></p><br>
<p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p><br>
<p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %></p><br>
<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_tag("/rides/new") do %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag "Go on this ride" %>
  <% end %>
<% end %>
